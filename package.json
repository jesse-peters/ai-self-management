{
  "name": "projectflow",
  "version": "0.0.1",
  "description": "MCP server for project/task management with persistent state",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "setup": "tsx scripts/setup-auto.ts",
    "setup:reset": "tsx scripts/reset.ts",
    "clean": "tsx scripts/clean.ts",
    "validate-config": "tsx scripts/validate-config.ts",
    "dev:check": "tsx scripts/check-dev-health.ts",
    "dev:start": "tsx scripts/dev-start.ts",
    "predev": "tsx scripts/dev-setup.ts",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter web",
    "dev:mcp": "turbo dev --filter @projectflow/mcp-server",
    "build": "turbo build",
    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "test": "turbo test",
    "db:migrate": "pnpm --filter @projectflow/db db:migrate",
    "db:reset": "pnpm --filter @projectflow/db db:reset",
    "db:generate-types": "pnpm --filter @projectflow/db db:generate-types",
    "db:status": "pnpm --filter @projectflow/db db:status",
    "supabase:start": "cd packages/db && supabase start",
    "supabase:stop": "cd packages/db && supabase stop",
    "supabase:status": "cd packages/db && supabase status",
    "vercel:link": "tsx scripts/link-vercel.ts",
    "vercel:env:pull": "tsx scripts/env-pull.ts",
    "vercel:env:push": "tsx scripts/env-push.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "node-fetch": "^3.3.2",
    "supabase": "^1.200.0",
    "tsx": "^4.7.0",
    "turbo": "^2.3.0",
    "typescript": "^5.0.0",
    "vercel": "^33.0.0",
    "vitest": "^1.0.0"
  }
}
